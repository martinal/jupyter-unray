{
  "name": "unray",
  "version": "0.1.0",
  "description": "Jupyter Widget for Volume Rendering of Unstructured Tetrahedral Mesh Data",
  "author": "Martin Sandve Aln√¶s <martin.alnes@gmail.com>",
  "license": "BSD-3-Clause",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/martinal/unray.git"
  },
  "jupyterlab": {
    "extension": "lib/plugin"
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "visualization",
    "rendering",
    "scientific",
    "FEM",
    "webgl",
    "threejs",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "scripts": {
    "build": "npm run build:lib && npm run build:nbextension",
    "build:labextension": "cd ../unray && rimraf labextension && mkdirp labextension && cd labextension && npm pack ../../js",
    "build:lib": "tsc --project src",
    "build:nbextension": "webpack -p",
    "build:all": "npm run build:lib && npm run build:labextension && npm run build:nbextension",
    "lint": "eslint src/*.js",
    "node": "node",
    "watch": "onchange 'package.json' 'src/*.ts' 'src/glsl/*.glsl' 'src/glsl/utils/*.glsl' -v -- npm run build",
    "test": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "test:watch": "karma start --browsers ChromeHeadless karma.conf.js",
    "test:single": "karma start --single-run --browsers ChromeHeadless karma.conf.js",
    "test:chrome": "karma start --single-run --browsers Chrome karma.conf.js",
    "test:firefox": "karma start --single-run --browsers Firefox karma.conf.js",
    "test:debug": "karma start --debug=true --browsers Chrome karma.conf.js",
    "test:ci": "karma start --single-run --browsers Travis karma.conf.js"
  },
  "devDependencies": {
    "@phosphor/application": "^1.5.0",
    "@types/backbone": "^1.3.36",
    "@types/chai": "^4.0.4",
    "@types/expect.js": "^0.3.29",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/three": "^0.84.22",
    "eslint": "^4.7.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "expect.js": "^0.3.1",
    "jupyter-threejs": "^1.0.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^3.0.12",
    "karma-webpack": "^2.0.13",
    "mkdirp": "^0.5.1",
    "mocha": "^5.0.4",
    "onchange": "^3.3.0",
    "ts-loader": "^4.1.0",
    "typescript": "~2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-glsl-loader": "^1.0.1"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1.8",
    "d3-array": "^1.2.0",
    "d3-color": "^1.0.3",
    "d3-scale": "^2.0.0",
    "gl-matrix": "^2.4.0",
    "isndarray": "^1.0.0",
    "jupyter-dataserializers": "^1.1.2",
    "ndarray": "^1.0.18",
    "ndarray-determinant": "^1.0.0",
    "ndarray-ops": "^1.2.2",
    "ndarray-pack": "^1.2.1",
    "underscore": "^1.8.3"
  }
}
